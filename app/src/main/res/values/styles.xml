<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ActivityMainTheme">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/icp_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textFontWeight">@integer/fw_500</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/icp_16</item>
        <item name="iconSize">@dimen/icp_24</item>
        <item name="iconPadding">@dimen/icp_12</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:elevation">@dimen/e_4</item> <!-- Тень для кнопок -->
    </style>

    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/m_height_60</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/h_p_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fs_text_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:drawablePadding">@dimen/i_p_20</item>
        <item name="android:padding">@dimen/p_12</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textFontWeight">@integer/fw_100</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="DarkThemeSwitchTheme" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/blue</item>
    </style>

    <style name="ToolbarText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:textFontWeight">100</item>
        <item name="drawableStartCompat">@drawable/ic_arrow_back</item>
        <item name="drawableTint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SearchTextView">
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="drawableTint">@color/light_gray</item>
        <item name="android:backgroundTint">@color/ico_light_gray</item>
    </style>

    <style name="SearchBg">
        <item name="android:backgroundTint">@color/ico_light_gray</item>
    </style>

    <style name="IwClear">
        <item name="tint">@color/light_gray</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/fs_text_24</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">@integer/fw_100</item>
    </style>

    <style name="TextViewRecycler">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">@integer/fw_400</item>
        <item name="titleTextColor">?attr/textAppearanceBodySmall</item>
        <item name="android:textSize">@dimen/fs_text_12</item>
    </style>

</resources>